<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:src="@drawable/ic_done_green"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/local_currency_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subTitleSize"
            style="@style/TextStyleMedium"
            tools:text="$0.00 USD"/>

        <Space
            android:layout_width="3dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/balance_bar_text_size"
            android:text="@string/payment_seperator"/>

        <Space
            android:layout_width="3dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/eth_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/balance_bar_text_size"
            tools:text="0.0000"/>

        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/balance_bar_text_size"
            android:text="@string/eth_currency_code"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="32dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="from"/>

        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
        tools:text="0x12345678901234567890"/>
    </LinearLayout>
</LinearLayout>