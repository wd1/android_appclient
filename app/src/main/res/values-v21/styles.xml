<resources>

    <style name="Button" parent="android:Widget.Holo.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/general_button_background</item>
        <item name="android:textColor">@color/general_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="clickableBorderlessBackground">
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="closeButtonStyle" parent="clickableBorderlessBackground">
        <item name="android:padding">16dp</item>
    </style>
</resources>